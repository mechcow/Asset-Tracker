<div>
	<label>Name</label>
	<%= f.text_field :name %>
	<%= error_message_on :model, :name %>
</div>

<div>
	<label>Manufacturer</label>
	<%= select :model, :manufacturer_id, Manufacturer.find(:all).collect {|n| [ n.name, n.id ] }.sort %>
	<%= link_to image_tag('/images/icons/add.png'), new_manufacturer_path, :target => '_blank' %>
	<%= error_message_on :model, :manufacturer %>
</div>

<div>
	<label>Type</label>
	<%= select :model, :kind_id, Kind.find(:all).collect {|n| [ n.name, n.id ] }.sort %>
	<%= link_to image_tag('/images/icons/add.png'), new_kind_path, :target => '_blank' %>
	<%= error_message_on :model, :kind %>
</div>
