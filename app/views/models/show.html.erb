<h1><%= @title = h(@model.name) %></h1>

<% if current_user.has_role?("admin") -%>
  <%= link_to image_tag('/images/icons/pencil.png'), edit_model_path(@model) %>
  <%= link_to image_tag('/images/icons/bin_closed.png'), @model, :confirm => 'Are you sure?', :method => :delete %>
<% end -%>

<table>
	<tbody>
	<tr>
		<td>Manufacturer</td>
		<td><%= h(@model.manufacturer.name) %></td>
	</tr>
	<tr>
		<td>Kind</td>
		<td><%= h(@model.kind.name) %></td>
	</tr>
	<tr>
		<td>Assets</td>
		<td><%= h(@model.assets.count) %></td>
	</tr>
	</tbody>
</table>

<h2>Assets</h2>

<table>
	<thead>
  <tr>
	<td>Login</td>
	<td>Serial</td>
	<td>Notes</td>
	<td>Actions</td>
  </tr>
	</thead>
<tbody>
<% for asset in @model.assets %>
  <tr>
    <td><%= link_to h(asset.user.login), asset.user %></td>
    <td><%= link_to h(asset.serial), asset %></td>
    <td><%= link_to h(asset.notes), asset %></td>
    <td>
    <% if current_user.has_role?("admin") -%>
      <%= link_to image_tag('/images/icons/pencil.png'), edit_asset_path(asset) %>
      <%= link_to image_tag('/images/icons/bin_closed.png'), asset, :confirm => 'Are you sure?', :method => :delete %>
    <% end -%>
    </td>
  </tr>
<% end %>
</tbody>
</table>


