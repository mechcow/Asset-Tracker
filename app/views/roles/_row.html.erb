<tr id="role_<%= role.id %>" class="<%= cycle 'odd', 'even' %>">
  <td><%= link_to h(role.name), role_path(role.id) %></td>
  <td>
  <% if current_user.has_role?("admin") -%>
    <%= link_to image_tag('/images/icons/pencil.png'), edit_role_path(role) %>
    <%= link_to_remote image_tag('/images/icons/bin_closed.png'), :url => role_url(role), :method => :delete, :confirm => "Really delete role?" %>
  <% end -%>
  </td>
</tr>
