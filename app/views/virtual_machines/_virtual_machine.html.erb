<div class="field">
  <label>VCPUs</label>
  <%= f.text_field :vcpus %>
  <%= error_message_on :asset, :vcpus %>
</div>
<div class="field">                                                                                                                                          
  <label>Dom0 Parent </label>
  <%= f.select :parent_id, Machine.all(:include => :asset, :conditions => { :isdom0 => true }).collect {|n| [ h(n.fqdn), n.id ] }.sort, { :include_blank => true } %> 
  <%= link_to image_tag('/images/icons/add.png'), new_asset_path, :target => '_blank' %>
  <%= error_message_on :asset, :fqdn %>
</div>
